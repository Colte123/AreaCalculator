def AreaCalculator():
  Shape = int(input("What shape are you calculating?(square is 1, triangle is 2, rectangle is 3, circle is 4.)"))
  if Shape == 1:
    return square()
  elif Shape == 2:
    return triangle()
  elif Shape == 3:
    return rectangle()
  elif Shape == 4:
    return circle()
  else:
    print("Invalid number, please try again")

def square():
  Slength=int(input("What are the side lengths?:"))
  Sarea=Slength*Slength
  print("the area is",Sarea)

def triangle():
  Base = int(input("What is the base?"))
  Height = int(input("What is the height?:"))
  Tarea=(Base*Height)/2
  print("the area is",Tarea)

def rectangle():
  Rlength = int(input("What is the length?:"))
  Width = int(input("What is the width?:"))
  Rarea=Rlength*Width
  print("the area is",Rarea)

def circle():
  Radius = int(input("What is the radius?:"))
  Carea=3.141592*Radius**2
  print("the area is",Carea)

AreaCalculator()
